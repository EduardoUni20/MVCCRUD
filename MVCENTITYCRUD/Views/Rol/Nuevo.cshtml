@model MVCENTITYCRUD.Models.Rol;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Nuevo rol</h2>
        <form asp-controller="Rol" asp-action="Nuevo" method="post">
            <div class="mb-3">
                <label>Nombre del rol</label>
                <input class="form-control" asp-for="NombreRol" type="text" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Rol" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>


    </div>
</div>