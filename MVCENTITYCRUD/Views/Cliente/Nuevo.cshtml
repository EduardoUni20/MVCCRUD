@model MVCENTITYCRUD.Models.Cliente;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Nuevo cliente</h2>
        <form asp-controller="Cliente" asp-action="Nuevo" method="post">
            <div class="mb-3">
                <label>Nombre del cliente</label>
                <input class="form-control" asp-for="NombreCliente" type="text" />
            </div>
            <div class="mb-3">
                <label>Cedula</label>
                <input class="form-control" asp-for="Cedula" type="text" />
            </div>
            <div class="mb-3">
                <label>Correo</label>
                <input class="form-control" asp-for="Correo" type="email" />
            </div>
            <div class="mb-3">
                <label>Telefono</label>
                <input class="form-control" asp-for="Telefono" type="txt" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Cliente" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>


    </div>
</div>