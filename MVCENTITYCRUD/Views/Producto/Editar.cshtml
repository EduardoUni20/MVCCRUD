@{
}
@model MVCENTITYCRUD.Models.Producto;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar producto</h2>
        <form asp-controller="Producto" asp-action="Editar" method="post">
            <input asp-for="IdProducto" type="hidden" />

            <div class="mb-3">
                <label>Nombre del producto</label>
                <input class="form-control" asp-for="NombreProducto" type="text" />
            </div>
            <div class="mb-3">
                <label>Categoria</label>
                <select class="form-control" asp-for="CategoriaId">
                    <option value="">Seleccione una categoria</option>
                    @foreach (var rol in (IEnumerable<MVCENTITYCRUD.Models.Categoria>)ViewData["Categorias"])
                    {
                        <option value="@rol.IdCategoria">@rol.NombreCategoria</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label>Precio</label>
                <input class="form-control" asp-for="Precio" type="number" />
            </div>
            <div class="mb-3">
                <label>Ingredientes</label>
                <input class="form-control" asp-for="Ingredientes" type="text" />
            </div>




            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Producto" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>


    </div>
</div>