@{
}


@model List<MVCENTITYCRUD.Models.Categoria>;

<div class="row">
    <div class="container-hidden col-sm-8 offset-sm-2">
        <h2>Lista categorias</h2>
        <a asp-controller="Categoria" asp-action="Nuevo" class="btn btn-success mb-3">Nuevo</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Categoria</th>
                    <th></th>

                </tr>
            <tbody>
                    @foreach (var item in Model)
                    {

                    <tr>
                        <td>@item.IdCategoria</td>
                        <td>@item.NombreCategoria</td>

                        <td>
                            <a asp-controller="Categoria"
                               asp-action="Editar"
                               asp-route-id="@item.IdCategoria"
                               class="btn btn-primary">Editar</a>

                            <a asp-controller="Categoria"
                               asp-action="Eliminar"
                               asp-route-id="@item.IdCategoria"
                               onclick="return confirmar()"
                               class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>


                    }
            </tbody>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function confirmar() {
            return confirm("Esta seguro de eliminar la categoria?")
        }
    </script>
}